{
    "version": 2,
    "buildCommand": "cd client && npm install && npm run build",
    "installCommand": "cd server && npm install",
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/server.js"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ]
}